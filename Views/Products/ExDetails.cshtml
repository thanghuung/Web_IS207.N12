@foreach (var items in Model.Feedbacks) {
    if (items.Rate == 1) {
        rating[0] += 1;
    } else if (items.Rate == 2) {
        rating[1] += 1;
    } else if (items.Rate == 3) {
        rating[2] += 1;
    } else if (items.Rate == 4) {
        rating[3] += 1;
    } else if (items.Rate == 5) {
        rating[4] += 1;
    }
}
