@model IEnumerable<WEB2.Models.Product>
@{
    ViewData["Title"] = "Accessories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link href="@Url.Content("/css/views/home/productlist.css")" rel="stylesheet" type="text/css" />
}
<main>
    <style>
        .card-body {
            height: 200px;
        }
        .card-body > p {
            text-align: center;
            font-size: 14px;
        }

            .card-body > p > span {
                padding: 5px;
                border: 1px solid black;
                border-radius: 3px;
                margin-left: 3px;
                margin-right: 3px;
                color: black;
                font-weight: 500;
            }
    </style>
         <div class="container" style="justify-content: center">
            <div class="mb-3">
                <div class="d-inline">
                    <a class="btn" id="Apple" asp-controller="Products" asp-action="Category" asp-route-id="46"><img src="https://cdn.tgdd.vn/Brand/1/Apple9499-b_28.jpg" width="90" /></a>
                    <a class="btn" id="Razer" asp-controller="Products" asp-action="Category" asp-route-id="54"><img src="https://cdn.tgdd.vn/Brand/1/220-48-220x48-13.jpg" width="90" /></a>
                    <a class="btn" id="Rapoo" asp-controller="Products" asp-action="Category" asp-route-id="61"><img src="https://cdn.tgdd.vn/Brand/1/Rapoo86-s56-160x40-2.png" width="90" /></a>
                    <a class="btn" id="HyperX" asp-controller="Products" asp-action="Category" asp-route-id="62"><img src="https://cdn.tgdd.vn/Brand/1/logo-hyperx-1-220x48-1.jpg" width="90" /></a>
                    <a class="btn" id="Logitech" asp-controller="Products" asp-action="Category" asp-route-id="63"><img src="https://cdn.tgdd.vn/Brand/1/Logitech86-b_41.jpg" width="90" /></a>
                    <a class="btn" id="Energizer" asp-controller="Products" asp-action="Category" asp-route-id="65"><img src="https://cdn.tgdd.vn/Brand/1/Energizer57-b_50.jpg" width="90" /></a>
                    <a class="btn" id="Xmobile" asp-controller="Products" asp-action="Category" asp-route-id="66"><img src="https://cdn.tgdd.vn/Brand/1/Xmobile57-b_42.jpg" width="90" /></a>
                </div>
            </div>
        </div>
   <div class="highlight">
        @foreach (var item in Model) {
            <div class="displaying">
                @*class để hiển thị *@
                <a asp-action="Details" asp-route-id="@item.ProductId">
                    <div class="card">
                        @*nhớ add id này để lọc *@
                        <div class="lbsale"><span class="lbtragop">Trả góp 0%</span></div>
                        <img class="card-img-top" src="@item.Picture" alt="@item.Color">
                        <div class="card-body">
                            <h6 class="card-title product-name">@item.ProductName</h6>
                            <h5 class="card-title pricesale m-0">@item.UnitPrice</h5>
                            <h6 class="card-title price text-muted mt-1">@item.MSRP</h6>
                            <div>
                                <p style="display:inline">
