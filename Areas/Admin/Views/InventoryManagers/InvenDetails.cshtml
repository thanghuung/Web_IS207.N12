@model IEnumerable<WEB2.Models.Invent_product>

@{
    ViewData["Title"] = "InvenDetails";
}

<head>
    <!-- Datatable -->
    <link href="~/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <!-- Custom Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>

    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome back!</h4>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    @*<li class="breadcrumb-item"><a href="javascript:void(0)">Quản lý kho hàng</a></li>*@
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Quản lý hàng</a></li>
                    <li class="breadcrumb-item active"><a asp-action ="Index">Kho vận</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Chi tiết</a></li>
                </ol>
            </div>
        </div>

        <!-- row -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a> <h4 class="border-danger">Kho số <span  id = "idinven"></span></h4></a>
                        <div ><h4>Tình trạng:<span class="text-danger" id="acti"></span></h4> </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>
                                            Sản phẩm
                                        </th>
                                        <th>
                                            Số lượng còn trong kho
                                        </th>
                     
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ int productid = 0; }
                                    @foreach (var item in Model) {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Product.ProductDetail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ProductAvailable)
                                            </td>
                                   
                                            <td>
                                          
                                                <a asp-action="Details" asp-area="" asp-controller = "Products" asp-route-id="@item.ProductId" class="btn btn-outline-primary">Chi tiết</a> 
                                                <a asp-action = "CreateID" asp-area= "Admin" asp-controller ="PurchaseDetails" asp-route-id = "@item.ProductId" class="btn btn-secondary" >Nhập hàng</a> 
                                               
                                                <div class="btn btn-outline-danger">   @Html.ActionLink("Chuyển hàng","TransProductID", "InventoryManagers", new{invenid = item.InventoryId, proid = item.ProductId},null)</div>
                                             
                                                
                                            </td>
                                        </tr>
                                        productid = item.InventoryId;
              
                        
                                    }
                    
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>
                                            Sản phẩm
                                        </th>
                                        <th>
                                            Số lượng còn trong kho
                                        </th>
                             
                                        <th>Thao tác</th>
                                    </tr>
                                </tfoot>
                            </table>
                            <script type= "text/javascript">
                                  document.getElementById("idinven").innerHTML = @productid;
                       
                  
                                   
                            </script>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>

    <!-- Required vendors -->
    <script src="~/vendor/global/global.min.js"></script>
    <script src="~/js/quixnav-init.js"></script>
    <script src="~/js/custom.min.js"></script>

    <!-- Datatable -->
    <script src="~/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/js/plugins-init/datatables.init.js"></script>
</body>